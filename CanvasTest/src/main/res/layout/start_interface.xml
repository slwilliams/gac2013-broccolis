<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@drawable/menubg">

    <ImageView
                android:layout_width="200dp"
                android:layout_height="fill_parent"
                android:id="@+id/imageView"
                android:layout_column="85"
                android:src="@drawable/menulogo"
                android:layout_marginLeft="40dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_marginRight="90dp"
                  android:layout_centerVertical="true"
                  android:layout_alignParentRight="true"
                    android:layout_marginLeft="1000dp">
    <Button
            android:text="New game"
            android:id="@+id/button1"

            android:textColor="#FFFFFF"
            android:textSize="19sp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="7"
            android:onClick="newGame"
            android:layout_alignTop="@+id/imageView"
            android:layout_toLeftOf="@+id/button2"/>

    <Button
                android:text="@string/selectLevelButton"
                android:id="@+id/button2"

                android:textColor="#FFFFFF"
                android:textSize="17sp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonshape"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:layout_column="114"
                android:layout_gravity="center"
                android:onClick="selectLevel"
                android:layout_centerVertical="true"
                android:layout_marginTop="20dp"/>

    <Button
                android:text="@string/aboutButton"
                android:id="@+id/button3"
                android:onClick="about"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                android:gravity="center"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonshape"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:layout_column="118"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"/>
</LinearLayout>
</RelativeLayout>